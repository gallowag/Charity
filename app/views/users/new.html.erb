<div class="signup">
  <div class="container">
    <div class="form">

    <h1>Sign up</h1>
    <%= form_for :user, url: users_path do |f| %>
    <div class="field">
      <%= f.label :username %><br>
      <%= f.text_field(:username, {:class => 'form-control'}) %>
    </div>
    <div class="field">
      <%= f.label :email %><br>
      <%= f.text_field(:email, {:class => 'form-control'}) %>
    </div>
    <div class="field">
      <%= f.label :password %><br>
      <%= f.password_field(:password, {:class => 'form-control'}) %>
    </div>
    <div class="actions">
      <br>
      <%= f.submit("Apply", {:class => 'btn btn-primary'}) %>
    </div>
    <% end %>

    </div>
  </div>
</div>
