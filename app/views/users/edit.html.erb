<div class="edit">
  <div class="container">
    <div class="form">

    <h1>Edit Profile</h1>
    <%= form_for(@user) do |f| %>
    <div class="field">
      <%= f.label :username %><br>
      <%= f.text_field(:username, {:class => 'form-control'}) %>
    </div>
    <div class="field">
      <%= f.label :email %><br>
      <%= f.text_field(:email, {:class => 'form-control'}) %>
    </div>
    <div class="actions">
      <br>
      <%= f.submit("Update", {:class => 'btn btn-primary'}) %>
    </div>
    <% end %>

    </div>
  </div>
</div>
